<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_template_inherit" model="ir.ui.view">
        <field name="name">product.template.inherit.button</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_open_label_layout']" position="after">
                <button name="action_sync_garista"
                        string="Sync Garista"
                        type="object"
                        class="oe_highlight"
                        icon="fa-refresh"/>
            </xpath>
        </field>
    </record>
</odoo>
